{% extends 'base.html.twig' %}

{% block title %}Редактирование поста{% endblock %}
{% block body %}
    <h1>Редактирование поста {{ post.title }}</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </div>
    </div>
    {{ form_end(form) }}
    <div>
        <a href="{{ path('post',{'id': post.id}) }}"><button class="btn btn-primary">Вернуться к просмотру</button></a>
    </div>

{% endblock %}



